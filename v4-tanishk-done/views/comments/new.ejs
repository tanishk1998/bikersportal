<%include ../partials/header %>
	<div class="container">
		<h1 style="text-align: center;">Add comment to <%=post.title%></h1>
		<div style="width:30%; margin:25px auto;">
			<form method="POST" action="/posts/<%=post._id%>/comments">
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" placeholder="text">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>	
			</form>
			<a href="/posts/<%=post._id%>">GO BACK</a>
		</div>
		
		
	</div>
	
<% include ../partials/footer %>