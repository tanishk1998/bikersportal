				<div class="form-group">
					<input type="text" name="bike[model]" value="<%=bike.model%>">
				</div>
				<div class="form-group">
					<input type="text" name="bike[description]" value="<%=bike.description%>" style="height:90px; width:100%;">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>	
			</form>
			<a href="/bikes">GO BACK</a>
		</div>
		
		
	</div>
	
