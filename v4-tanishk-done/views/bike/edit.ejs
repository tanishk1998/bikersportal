<%include ../partials/header %>
	<div class="container">
		<h1 style="text-align: center;">EDIT...</h1>
		<div style="width:30%; margin:25px auto;">
			<form method="POST" action="/bikes/<%=bike._id%>?_method=PUT" enctype="multipart/form-data">
