<%include ../partials/header%>
	<div class="container jumbotron" style="height: 300px; padding: 0px; ">
		<img style="width: 100%; height: 80%;" src=<%=user.coverPhoto%> >
		<span style="align: right;">
			<b><%=user.name %></b>
			<img style="height: 60px; width: 60px; display: inline;" src=<%=user.profilePhoto%> >
		</span>
	</div>
	<div class="container">
		<a class="btn btn-xs btn-primary" href="/profile/<%=user._id%>/about">About</a>
		<a class="btn btn-xs btn-primary" href="/profile/bikes/<%=user._id%>">Show bike info</a>
		
	</div>
	<br>
	<div class="row text-center">
		<%data.sort(function(a,b){%>
		<%return b.created-a.created%>
		<%})%>
		<%data.forEach(function(event){ %>
			<%if(event.author.id.equals(user._id)){%>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src=<%=event.image%>>
						<div class="caption">
							<h4><%= event.name %></h4>
							<p><a href="/posts/<%=event._id%>" class="btn btn-primary">MORE INFO</a></p>
						</div>
					</div>					
				</div>
			<%}%>
		<%})%>
			
	</div>
	<br>
	<hr>
	

<%include ../partials/footer%>